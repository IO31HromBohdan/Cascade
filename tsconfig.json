{
  "compilerOptions": {
    "target": "ES2023",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2023"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true
  },
  "include": ["frontend/**/*.ts", "frontend/**/*.tsx", "backend/**/*.ts"],

  "baseUrl": ".",
  "paths": {
    "@/*": ["frontend/src/*", "backend/src/*"]
  }
}
